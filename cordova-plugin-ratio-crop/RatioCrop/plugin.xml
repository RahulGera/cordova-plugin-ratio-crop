<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-ratio-crop" version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>RatioCrop</name>
    <js-module name="RatioCrop" src="www/RatioCrop.js">
        <clobbers target="cordova.plugins.RatioCrop" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="RatioCrop">
                <param name="android-package" value="com.peterantonyrausch.ratiocrop" />
            </feature>
        </config-file>

        <framework src="com.soundcloud.android:android-crop:1.0.0@aar" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>

        <source-file src="src/android/RatioCrop.java" target-dir="src/cordova-plugin-ratio-crop/RatioCrop" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="RatioCrop">
                <param name="ios-package" value="com.peterantonyrausch.ratiocrop" />
            </feature>
        </config-file>
        <source-file src="src/ios/RatioCrop.m" />
    </platform>
</plugin>